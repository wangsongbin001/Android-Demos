<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="registerreceiver"/>

    <Button
        android:id="@+id/btn_unregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unregisterreceiver"/>

    <Button
        android:id="@+id/btn_send_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sendnormalbroadcast"/>

    <Button
        android:id="@+id/btn_send_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sendorderbroadcast"/>

</LinearLayout>