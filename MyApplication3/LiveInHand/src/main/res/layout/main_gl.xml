<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <com.example.songbinwang.liveinhand.view.StretchLayout
            android:id="@+id/sl_video"
            android:layout_width="190dp"
            android:layout_height="90dp"
            android:background="@color/aa_blue"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_video" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="@string/enjoy_video"
                android:textColor="@color/ff_white" />

        </com.example.songbinwang.liveinhand.view.StretchLayout>

        <com.example.songbinwang.liveinhand.view.StretchLayout
            android:id="@+id/sl_news"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/sl_video"
            android:background="@color/aa_blue">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_news" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="新闻热点"
                    android:textColor="@color/ff_white" />
            </LinearLayout>

        </com.example.songbinwang.liveinhand.view.StretchLayout>

        <com.example.songbinwang.liveinhand.view.StretchLayout
            android:id="@+id/sl_im"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/sl_video"
            android:background="@color/aa_blue">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_news" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="飞鸽传书"
                    android:textColor="@color/ff_white" />
            </LinearLayout>

        </com.example.songbinwang.liveinhand.view.StretchLayout>

        <com.example.songbinwang.liveinhand.view.StretchLayout
            android:id="@+id/sl_payment"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/sl_video"
            android:layout_toRightOf="@+id/sl_im"
            android:background="@color/aa_blue">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_news" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_news"
                    android:layout_centerHorizontal="true"
                    android:text="topbar"
                    android:textColor="@color/ff_white" />
            </LinearLayout>

        </com.example.songbinwang.liveinhand.view.StretchLayout>

        <com.example.songbinwang.liveinhand.view.StretchLayout
            android:id="@+id/sl_push"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/sl_im"
            android:layout_marginTop="10dp"
            android:background="@color/aa_blue">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_news" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="新闻热点"
                    android:textColor="@color/ff_white" />
            </LinearLayout>

        </com.example.songbinwang.liveinhand.view.StretchLayout>

        <com.example.songbinwang.liveinhand.view.StretchLayout
            android:id="@+id/sl_time_runable"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/sl_push"
            android:layout_below="@+id/sl_payment"
            android:background="@color/aa_blue">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_news" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="新闻热点"
                    android:textColor="@color/ff_white" />
            </LinearLayout>

        </com.example.songbinwang.liveinhand.view.StretchLayout>

        <com.example.songbinwang.liveinhand.view.StretchLayout
            android:id="@+id/sl_location"
            android:layout_width="90dp"
            android:layout_height="190dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/sl_payment"
            android:layout_below="@+id/sl_news"
            android:background="@color/aa_blue">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_news" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="新闻热点"
                    android:textColor="@color/ff_white" />
            </LinearLayout>

        </com.example.songbinwang.liveinhand.view.StretchLayout>


    </RelativeLayout>

</FrameLayout>
