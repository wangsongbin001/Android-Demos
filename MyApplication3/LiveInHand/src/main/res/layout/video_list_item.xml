<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ff_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/video_list_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_account"
            android:layout_width="@dimen/video_image_width"
            android:layout_height="@dimen/video_image_height"
            android:src="@drawable/video_list_bg_bitmap"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/video_list_paddingleft"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_video_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_video_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/video_text_second_color"
                android:textSize="@dimen/video_text_second_size"
                android:text="0:02:06"/>

        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_selected"
            style="@style/List_Item_CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/video_list_paddingright"
            android:enabled="false"
            android:visibility="gone"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_divider"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/video_divider"
        android:src="@color/list_divider_grey"
        android:paddingLeft="@dimen/video_list_paddingleft"
        android:paddingRight="@dimen/video_list_paddingright"/>

</LinearLayout>
