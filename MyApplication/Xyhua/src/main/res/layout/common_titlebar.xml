<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--状态栏-->
    <com.wang.xyhua.common.view.StatusBarLayout
        android:id="@+id/title_statusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@color/transparent" />

    <RelativeLayout
        android:id="@+id/title_rlContainer"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/bg_white">

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:maxWidth="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/title_left"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="center"
                android:layout_gravity="left|center_vertical"/>

            <TextView
                android:id="@+id/title_left_textview"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxWidth="80dp"
                android:text=""
                android:singleLine="true"
                android:textColor="@color/font_gray_66"
                android:textSize="@dimen/fontSize_16" />
        </LinearLayout>

        <TextView
            android:id="@+id/title_middle_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxWidth="224dp"
            android:text=""
            android:singleLine="true"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/fontSize_16" />

        <LinearLayout
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:maxWidth="120dp">

            <ImageView
                android:id="@+id/title_right"
                android:layout_gravity="center_vertical"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/title_right_textview"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:maxWidth="80dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black_333333"
                android:textSize="@dimen/fontSize_10" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_e6e6e6"/>

</LinearLayout>