<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/titlebar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/common_titlebar"/>

    <LinearLayout
        android:layout_below="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            style="@style/wrap_center_h"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="40dp"
            android:src="@mipmap/login_logo"/>

         <LinearLayout
             android:layout_marginTop="10dp"
             android:layout_width="200dp"
             android:layout_gravity="center_horizontal"
             android:layout_height="46dp">

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@mipmap/icon_login_phone"
                 android:layout_gravity="center_vertical"/>

             <EditText
                 android:id="@+id/et_phone"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="46dp" />

         </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="46dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_login_verify_code"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:id="@+id/et_verifycode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="46dp" />

            <Button
                android:id="@+id/btn_get_verifycode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp">

        <ImageView
            android:id="@+id/iv_login_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_login_wechat"
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/iv_login_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_qq_small"
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/iv_login_sina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_login_sinawb"
            android:padding="10dp"/>

    </LinearLayout>

</RelativeLayout>
