<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/titlebar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/common_titlebar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        android:orientation="vertical">

        <ImageView
            style="@style/wrap_center_h"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="40dp"
            android:src="@mipmap/login_logo"/>

        <RelativeLayout
            android:id="@+id/rl_login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:gravity="center_horizontal"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img_login_username"
                android:layout_width="9dp"
                android:layout_height="13dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/edtwd_username"
                app:backgroundImage="@mipmap/icon_login_phone"/>

            <com.vcredit.j1000.common.view.EditTextWithDel
                android:id="@+id/edtwd_username"
                style="@style/textview_14_4f4e58"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:gravity="center"
                android:hint="@string/login_mobile_number"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/gray_cccccc"
                android:textCursorDrawable="@drawable/shape_custom_cursor_red"/>


        </RelativeLayout>

        <View
            android:id="@+id/login_divider_line1"
            style="@style/dividing_line"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@color/black_333333"/>

        <RelativeLayout
            android:id="@+id/rl_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img_login_sms_verify_code"
                android:layout_width="13dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/tv_get_login_sms_verify_code"
                app:backgroundImage="@mipmap/icon_login_verify_code"
                />

            <TextView
                android:id="@+id/tv_get_login_sms_verify_code"
                style="@style/textview_14_4f4e58"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="获取短信验证"
                android:textColor="@color/gray_cccccc"
                />

            <EditText
                android:id="@+id/et_login_sms_verify_code"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@null"
                android:gravity="left"
                android:inputType="number"
                android:maxLength="4"
                android:textColor="@color/black_333333"
                android:textCursorDrawable="@drawable/shape_custom_cursor_small_red"
                android:textSize="@dimen/fontSize_36"
                android:visibility="invisible"/>

            <View
                android:id="@+id/v_bottom_line1"
                android:layout_width="19dp"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/et_login_sms_verify_code"
                android:layout_below="@+id/et_login_sms_verify_code"
                android:background="@color/black_333333"
                android:visibility="invisible"/>

            <View
                android:id="@+id/v_bottom_line2"
                android:layout_width="19dp"
                android:layout_height="1dp"
                android:layout_below="@+id/et_login_sms_verify_code"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/v_bottom_line1"
                android:background="@color/black_333333"
                android:visibility="invisible"/>

            <View
                android:id="@+id/v_bottom_line3"
                android:layout_width="19dp"
                android:layout_height="1dp"
                android:layout_below="@+id/et_login_sms_verify_code"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/v_bottom_line2"
                android:background="@color/black_333333"
                android:visibility="invisible"/>

            <View
                android:id="@+id/v_bottom_line4"
                android:layout_width="19dp"
                android:layout_height="1dp"
                android:layout_below="@+id/et_login_sms_verify_code"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/v_bottom_line3"
                android:background="@color/black_333333"
                android:visibility="invisible"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_re_get"
            style="@style/textview_14_4f4e58"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:text="重新获取"
            android:textColor="@color/gray_cccccc"
            android:visibility="invisible"/>

        <LinearLayout
            android:id="@+id/ll_login_contract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal">

            <CheckBox
                android:id="@+id/cb_login_contract"
                style="@style/checkbok_15_15_black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="@string/login_read_and_agree"
                android:textSize="@dimen/fontSize_11"/>

            <TextView
                android:id="@+id/tv_contract_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="《信用花注册与服务协议》"
                android:textColor="@color/bule_489ef3"
                android:textSize="@dimen/fontSize_11"/>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="72dp"
                android:gravity="center_horizontal"
                android:textSize="@dimen/fontSize_12"
                android:textColor="@color/gray_999999"
                android:text="快捷登录方式"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="35dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@mipmap/icon_login_sinawb"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_social_wechat_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/relativelayout_matchparent_42_white"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_social_wechat_login"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@mipmap/icon_login_wechat"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_social_qq_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/relativelayout_matchparent_42_white"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@mipmap/icon_qq_small"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@mipmap/icon_login_tencentwb"/>

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
