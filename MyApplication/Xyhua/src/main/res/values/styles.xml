<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="wrap_center_h">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!--分割线-->
    <style name="dividing_line">
        <item name="android:layout_width">231dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_ffffff</item>
    </style>

    <!--14号字#4f4e58-->
    <style name="textview_14_4f4e58">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_4f4e58</item>
        <item name="android:textSize">@dimen/fontSize_14</item>
    </style>

    <!--复选框样式-->
    <style name="checkbok_15_15_black">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/selecter_checkbox</item>
        <item name="android:checked">true</item>
    </style>

    <!--相对布局整行的样式，多用于信息填写页整行的条目-->
    <style name="relativelayout_matchparent_42_white">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/selector_list_white_f3f3f3</item>
    </style>
</resources>
