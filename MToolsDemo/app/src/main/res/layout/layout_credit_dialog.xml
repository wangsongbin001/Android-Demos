<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fl_center"
            android:layout_width="268dp"
            android:layout_height="340dp">

                <ImageView
                    android:layout_width="268dp"
                    android:layout_height="340dp"
                    android:src="@mipmap/img_coupon_improve_bg"
                    android:scaleType="fitXY"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_marginTop="38dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="借款发放成功"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_quota"
                        android:layout_marginTop="26dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:textColor="#f15657"
                        android:text="¥100"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#f15657"
                        android:text="提额卷"/>

                    <TextView
                        android:layout_marginTop="28dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:text="恭喜你获得100元提额卷\n下次借款可用"/>

                    <Button
                        android:id="@+id/btn_use"
                        android:layout_marginTop="40dp"
                        android:layout_width="130dp"
                        android:layout_height="36dp"
                        android:text="立即使用"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:background="@drawable/bg_white_cornor"/>

                </LinearLayout>
        </FrameLayout>

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_marginTop="20dp"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/fl_center"
            android:src="@mipmap/icon_coupon_improve_close"/>

</RelativeLayout>
